{
  "manifest_version": 3,
  "name": "Meal meter extension",
  "version": "0.1.0",
  "description": "A Chrome extension that analyzes your Swiggy spending",
  "icons": {
    "16": "icons/meal-meter-icon.png",
    "48": "icons/meal-meter-icon.png",
    "128": "icons/meal-meter-icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/meal-meter-icon.png",
      "48": "icons/meal-meter-icon.png",
      "128": "icons/meal-meter-icon.png"
    }
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
